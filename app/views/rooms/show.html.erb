<center><h1> <%= @room.name %></h1></center>
<div class="row">
		<div class="col-12 col-md-3">
			<p> other stuff goes here </p>
			<p><%= @event.name %></p>
		</div>
	  
		<div class="col">
			<div class="chat" data-channel-subscribe="room" data-room-id="<%= @room.id %>">
				<% @room_messages.each do |room_message| %>
				<div class="chat-message-container">
				  <div class="row no-gutters">
					<div class="col-auto text-center">
					  <a class="username-chat" href="/users/<%= room_message.user.username %>" data-role="username"><%= room_message.user.username %></a>
					</div>
		
					<div class="col">
					  <div class="message-content">
						<p class="mb-1">
							<%= room_message.message %>
						</p>
		
						<div class="text-right">
						  <small>
							<%= room_message.created_at %>
						  </small>
						</div>
					  </div>
					</div>
				  </div>
				</div>
			  <% end %>
		  </div>
	  
		  <%= simple_form_for @room_message, :url => room_messages_path do |form| %>
			<div class="input-group mb-3">
			  <%= form.input :message, as: :string,
									   wrapper: false,
									   label: false,
									   input_html: {
										 class: 'chat-input'
									   } %>
			  <div class="input-group-append">
				<%= form.submit "Send", class: 'btn btn-primary chat-input' %>
			  </div>
			</div>
	  
			<%= form.input :room_id, as: :hidden %>
		  <% end %>
		</div>
	  </div>
	